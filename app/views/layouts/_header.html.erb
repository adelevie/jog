<div id='top_line'></div>
  <div id="container">
	 <div id="sign-in">
		<span class="sign-in">
		 <% if current_user %>
		<%= image_tag("#{current_user.image}", :class => 'img') %>
		<%= current_user.name %>
		<br /><%= link_to "Sign out", signout_path %>
		<% else %>
		<%= image_tag('https://s3.amazonaws.com/freit5misc/github.png') %>
		<%= link_to  "Sign in", "http://www.jog.io/auth/github" %>
		<% end %>
	</span></div>
	
	<div id="header">
	    <span id="tag">use</span>
	     <span id="logo"><a href="/" id="logo">Jog</a></span>
	        <span id="tag2">to quickly save & recall code</span></div>
			<div class="demo">	
				
	          <input class="typeahead" type ="text" placeholder="Search here...">
			
		       </div>		
  <% flash.each do |name, msg| %>
  	<div class="alert fade in alert-<%= name == :notice ? "success" : "error" %>">
  	  <a class="close" data-dismiss="alert">x</a>
	  <%= msg  %>			


<% end %>

<%= yield %>


